package javabean;

public class Calculator {
	public int add(int a , int b) {
		return a + b;
	}
	public int add(int a , int b, int c) {
		return a + b + c;
	}
	public double add(double a , double b) {
		return a + b;
	}
	public static void main(String args[]) {
		Calculator cal = new Calculator();
		System.out.println("Sum of two integers: " + cal.add(6, 9));
		System.out.println("Sum of three integers: " + cal.add(8, 7, 8));
		System.out.println("Sum of two doubles: " +cal.add(2.8, 9.4));
	}
}
